<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Roomr.ProfileCard">
    <HorizontalStackLayout>
        <Image
 Source="Resources/Images/Profile/joker.jpg"
            x:Name="photo"
 Margin="0, 0, 0, 15"
 VerticalOptions="CenterAndExpand"
/>
        <VerticalStackLayout>
        <Label Text="Da Joka Baybee"
                x:Name="name"
 FontSize="Title"
VerticalOptions="Start"
               HorizontalOptions="Center"/>

        <HorizontalStackLayout
          
HorizontalOptions="Center"
>
            <Image Source="=Resources/Images/Icons/locale.img"
                 MaximumHeightRequest="10"
                   
                  />


            <Label  Text="Hell, MI "
                   x:Name="location"
FontSize="Micro"
        HorizontalOptions="Start"
        />
            <Label Text="|"  FontSize="Micro"/>
            <Label  Text=" Distance From you: "
           FontSize="Micro"
                   HorizontalOptions="Start"
                   />
            <Label Text="Calculating..."
                  x:Name="distance"
                     FontSize="Micro"
                     />
        </HorizontalStackLayout>
        </VerticalStackLayout>
    </HorizontalStackLayout>
</ContentView>
